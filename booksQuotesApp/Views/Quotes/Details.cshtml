@model booksQuotesApp.Models.Quote

@{
    ViewBag.Title = "Details";
}


<div class="container detailsContainer">

    <div class="text-center">

        <h2>Quote details</h2>
  
        <div class="detailsBody">
            <div class="text-left col-md-8">


                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.QuoteText):
                    </dt>

                    <dd class="text-left">
                        @Html.DisplayFor(model => model.QuoteText)
                    </dd>





                    <dt>
                        Author:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Book.Author.Name)
                    </dd>

                    <dt>
                        Book:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Book.Name)
                    </dd>

                </dl>
            </div>

            <div class="col-md-4">

                <img class="myImgDetails" src="@Url.Content(Model.Book.ImageURL)" />
            </div>
        </div>
        <div class="text-left col-md-6">
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id },new {@class="btn btn-default"}) |
                @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-default" }) |
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
            </p>
        </div>
       

  
    </div>
</div>
