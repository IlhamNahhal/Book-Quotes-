@model booksQuotesApp.Models.Quote

@{
    ViewBag.Title = "Delete";
}

<div class="container AddContainer">

    <h2>Delete Quote</h2>
    <hr />
    <br/>
    
    <h3>Are you sure you want to delete this?</h3>
    <br />
    <div>
       
       
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.QuoteText)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.QuoteText)
            </dd>


            <dt>
                Book
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Book.Name)
            </dd>
            <dt>
                Author
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Book.Author.Name)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <br/>
                <br/>
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
            </div>
        }
    </div>

    </div>
